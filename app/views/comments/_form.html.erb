<%= simple_form_for [@article, @article.comments.build] do |form| %>
  <div>
    <%= form.input :commenter %>
  </div>
  <br>
  <div>
    <%= form.input :body %>
  </div>
  <br>
  <%= form.input :status, :collection => %w[public private archived], selected: 'public' %><br>
  <%= form.button :submit, "Submit" %><br>
<% end %>
