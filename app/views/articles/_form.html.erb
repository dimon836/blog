<%= form_with model: @article do |form| %>
  <% invalid = @article.errors.include?(:title) %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control #{'is-invalid' if invalid}" %>
    <% if invalid %>
      <div class="invalid-feedback d-block">
        <% @article.errors.full_messages_for(:title).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </div>
    <% end %>
  </div>
  <% invalid = @article.errors.include?(:body) %>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control #{'is-invalid' if invalid}" %><br>
    <% if invalid %>
      <div class="invalid-feedback d-block">
        <% @article.errors.full_messages_for(:body).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status %><br>
    <%= form.select :status, %w[public private archived], selected: 'public' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-block btn-primary" %>
  </div>
<% end %>
